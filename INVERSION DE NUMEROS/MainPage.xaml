    -->

    <StackLayout>
        <Image Source="descarga.png" 
               HeightRequest="150"
               Margin="0,30,0,0"
         />
        <Label Text="INGRESE NOTA 1"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,40,0,0">
        </Label>
        <Entry Placeholder="NOTA 1"
               Keyboard="Numeric"
               x:Name="n1">
        </Entry>
        <Label Text="INGRESE NOTA 2"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0">
        </Label>
        <Entry Placeholder="NOTA 2"
               Keyboard="Numeric"
               x:Name="n2">
        </Entry>
        <Label Text="INGRESE NOTA 3"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0">
        </Label>
        <Entry Placeholder="NOTA 3"
               Keyboard="Numeric"
               x:Name="n3">
        </Entry>
        <Label Text="INGRESE NOTA 4"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0">
        </Label>
        <Entry Placeholder="NOTA 4"
               Keyboard="Numeric"
               x:Name="n4">
        </Entry>
        <Label Text="INGRESE NOTA 5"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,0">
        </Label>
        <Entry Placeholder="NOTA 5"
               Keyboard="Numeric"
               x:Name="n5">
        </Entry>
        <Label Text="PROMEDIO: "
               FontSize="30"
               Margin="0,20,0,0"
               x:Name="prom">
        </Label>
        <Button HeightRequest="90"
                Margin="20"
                Text="CALCULAR"
                BackgroundColor="Green"
                x:Name="calcular"
                Clicked="calcular_Clicked">
            
        </Button>
    </StackLayout>

    <StackLayout HorizontalOptions="FillAndExpand">
        <Image Source="C:\Users\MINEDUCYT\Downloads"></Image>
        <Label Text="INVERSION DE NUMEROS"
               FontSize="40"
               HorizontalOptions="Center"
               Margin="0,100,0,0">
             
        </Label>
        <Label Text="Ingrese el primer numero"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,50,0,0">
        </Label>
        <Entry Placeholder="Primer numero"
               WidthRequest="200"
               HeightRequest="60"
               x:Name="num1"
               Keyboard="Numeric">
        </Entry>
        <Label Text="Ingrese el segundo numero"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,50,0,0">
        </Label>
        <Entry Placeholder="Segundo numero"
               WidthRequest="200"
               HeightRequest="60"
               x:Name="num2"
               Keyboard="Numeric">
        </Entry>
        <Label Text="Ingrese el tercer numero"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,50,0,0">
        </Label>
        <Entry Placeholder="Tercer numero"
               WidthRequest="200"
               HeightRequest="60"
               x:Name="num3"
               Keyboard="Numeric">
        </Entry>
        <Button Text="INVERTIR"
                CornerRadius="20"
                WidthRequest="100"
                HeightRequest="60"
                Margin="0,50,0,0"
                Clicked="Button_Clicked"
                x:Name="calcular">
        </Button>
    </StackLayout>

</ContentPage>
